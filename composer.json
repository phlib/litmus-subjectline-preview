{
    "name": "phlib/litmus-subjectline-preview",
    "description": "SDK to generate Litmus subject line preview images",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Benjamin Laugueux",
            "homepage": "https://github.com/blaugueux"
        },
        {
            "name": "Phlib Team & Contributors",
            "homepage": "https://github.com/phlib/litmus-subject-preview/contributors"
        }
    ],
    "require": {
        "php": "^7.3 | ^8.0",
        "ext-mbstring": "*",
        "ext-soap": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\LitmusSubjectPreview\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\LitmusSubjectPreview\\Test\\": "tests"
        }
    },
    "scripts": {
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
    }
}
